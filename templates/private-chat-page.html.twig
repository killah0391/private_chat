<div class="private-chat-container" id="private-chat-wrapper">
<button class="chat-toggle-sidebar-btn" aria-label="{{ 'Zur Chat-Liste'|t }}">←</button>
{% if messages %}
	<div class="chat-messages">
		{% for message in messages %}
    <ul><li>
			{{ message }}
      </ul></li>
		{% endfor %}
		</div>
		{% else %}
		<div class="chat-messages no-messages">
		<ul><li>{{ 'Keine Nachrichten in diesem Chat.'|t }}</ul></li>
		</div>
		{% endif %}

	<div class="chat-form">
		{{ form }}
		</div>
	</div>
