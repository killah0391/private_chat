<div class="private-chat-container" id="private-chat-wrapper" data-chat-uuid="{{ chat_uuid }}">
<button class="chat-toggle-sidebar-btn" aria-label="{{ 'Zur Chat-Liste'|t }}">â†</button>
{% if messages %}
	<div class="chat-messages">
	<ul>
		{% for message in messages %}
<li>
			{{ message }}
</li>
		{% endfor %}
		</ul>
		</div>
		{% else %}
		<div class="chat-messages no-messages">
		<ul><li>{{ 'Keine Nachrichten in diesem Chat.'|t }}</ul></li>
		</div>
		{% endif %}

	<div class="chat-form">
		{{ form }}
		</div>
	</div>
